{
    "firestore": {
        "rules": "firestore.rules"
    },
    "functions": {
        "source": "functions"
    },
    "hosting": {
        "public": "dist",
        "cleanUrls": true,
        "parameters": {},
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}